script startup cin_unit_test()

	if b_debug then 
		print_difficulty(); 
	end
	
	if b_debug then 
		print ("::: Cinematics Unit Test :::");
	end

	// put back in during massout
	//(f_loadout_set "default")
	
	//if b_encounters then
	//end

	// ============================================================================================
	// STARTING THE GAME
	// ============================================================================================
	if (b_game_emulate or ((b_editor != 1) and (player_count() > 0))) then
		// if true, start the game
		start();
		// else just fade in, we're in edit mode
	elseif b_debug then
		print (":::  editor mode  :::");
		fade_in (0, 0, 0, 0);
	end
end

