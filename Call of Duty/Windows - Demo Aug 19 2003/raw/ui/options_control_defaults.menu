menuDef 
{
	name options_control_defaults
	fullScreen 0				
	rect OPTIONS_WINDOW_POS OPTIONS_WINDOW_SIZE				// Size and position of the menu
	visible 1				// Visible on open
	focusColor .9 .85 1 .8			// Menu focus color for text and items
	soundloop ""
	onOpen
	{
		show grpdefault;
		show areyousure;
		hide grpfinish;
		uiScript loadControls
	}
	onESC 
	{ 
		open main;
		close options_menu;		
	}
