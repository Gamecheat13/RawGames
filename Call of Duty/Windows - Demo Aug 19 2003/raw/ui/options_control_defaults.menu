			textaligny 18
			forecolor 1 1 1 1
			backcolor .1 .1 .1 .1
			border 1
			bordercolor .5 .5 .5 .5 
			visible 1
			action { 
				play "mouse_click"; 
				close options_menu; 
				open options_menu;
				open options_look;
			}
			mouseEnter { setitemcolor no backcolor 1 1 .3 .3 
			play "mouse_over"} 
			mouseExit { setitemcolor no backcolor .1 .1 .1 .1 } 	
		}

