gfx/sun/global
{
	nomipmaps
	nopicmip
	{
	map clamp gfx/sun/global
	blendFunc add
	rgbGen identitylighting
	}
}

gfx/sun/global_flare
{
	nomipmaps
	nopicmip
	{
	map clamp gfx/sun/global_flare
	blendFunc gl_src_alpha gl_one
	rgbgen vertex
	alphaGen vertex
	}
}

